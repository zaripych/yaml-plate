{
  "name": "yaml-plate",
  "version": "0.0.0-development",
  "description": "Simple YAML/json templating using JavaScript",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "@zaripych",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "bin": {
    "yaml-plate": "./lib/yaml-plate.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/zaripych/yaml-plate.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "node ./scripts/build.js",
    "build:watch": "node ./scripts/build.js --watch",
    "declarations": "tsc -p ./tsconfig.declarations.json",
    "prebuild": "node ./scripts/clean.js",
    "clean": "node ./scripts/clean.js",
    "test": "jest --color",
    "integration": "jest --config ./jest.config.integration.js --color -i",
    "combine-coverage": "node ./scripts/combineCoverage.js",
    "type-check": "tsc",
    "lint": "tslint -p . -t verbose",
    "check": "concurrently \"node ./scripts/build.js\" \"tsc\" \"tslint -p . -t verbose\"",
    "patch": "ts-deps patch",
    "release": "semantic-release",
    "prepublishOnly": "yarn run build && yarn run declarations"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run check"
    }
  },
  "dependencies": {
    "fast-glob": "3.1.1",
    "fs-extra": "8.1.0",
    "js-yaml": "3.13.1",
    "rxjs": "6.5.3",
    "rxjs-stream": "3.1.0",
    "yargs": "15.0.2"
  },
  "devDependencies": {
    "@types/jest": "24.0.23",
    "@types/js-yaml": "3.12.1",
    "@types/node": "10",
    "@types/pump": "1.1.0",
    "@types/yargs": "13.0.3",
    "dotenv-expand": "5.1.0",
    "husky": "3.1.0",
    "rxjs-marbles": "5.0.4",
    "rxjs-spy": "7.5.1",
    "ts-deps": "0.9.0"
  },
  "resolutions": {
    "ts-deps/semantic-release/marked": "^0.7.0"
  }
}
