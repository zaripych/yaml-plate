{
  "name": "yaml-plate",
  "version": "0.0.1",
  "description": "Simple YAML/json/txt templating using JavaScript",
  "main": "index.js",
  "scripts": {
    "test": "jest --color",
    "build": "node ./scripts/build.js",
    "prebuild": "node ./scripts/clean.js",
    "clean": "node ./scripts/clean.js",
    "integration": "jest --config ./jest.config.integration.js --color -i",
    "type-check": "tsc",
    "lint": "tslint -p . -t verbose",
    "check": "concurrently \"node ./scripts/build.js\" \"tsc\" \"tslint -p . -t verbose\"",
    "patch": "ts-deps patch",
    "release": "semantic-release",
    "declarations": "tsc -p ./tsconfig.declarations.json",
    "combine-coverage": "node ./scripts/combineCoverage.js"
  },
  "author": "@zaripych",
  "license": "MIT",
  "dependencies": {
    "fast-glob": "2.2.6",
    "fs-extra": "7.0.1",
    "js-yaml": "3.12.2",
    "rxjs": "6.4.0",
    "rxjs-marbles": "5.0.0",
    "rxjs-stream": "3.0.1"
  },
  "devDependencies": {
    "@types/js-yaml": "3.12.0",
    "@types/node": "8.10.40",
    "ts-deps": "0.2.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run check"
    }
  }
}
